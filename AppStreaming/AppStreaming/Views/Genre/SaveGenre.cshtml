@model Application.ViewModels.GenreViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "SaveGenre";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>@(editMode ? $" Editando el Genero: {Model.Name}" : "Creando un Nuevo Genero")</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Genre" asp-action="@(editMode?"Edit" : "Create")">
                        <div class=" mb-3">
                            <label asp-for="Name" class="form-label">Nombre:</label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="Genre" asp-action="Index" class="btn btn-warning">Volver atras</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
