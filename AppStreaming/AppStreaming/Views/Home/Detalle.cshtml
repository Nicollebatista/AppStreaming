@model Application.ViewModels.SaveSerieViewModel
@{
    ViewData["Title"] = "Detalles Serie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-light text-center">
                    <h2>@Model.Name</h2>
                </div>
                <div class="card-body">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" width="100%" height="180"  src="@Model.VideoYout" allowfullscreen></iframe>
                    </div>
                    <p class="card-text">@Model.Description</p>
                    <form method="post" asp-controller="Serie" asp-action="DetallePost">
                        <input type="hidden" asp-for="Id" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver Atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
