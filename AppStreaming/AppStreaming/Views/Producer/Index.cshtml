@model List<Application.ViewModels.ProducerViewModel>
@{
    ViewData["Title"] = "Productores";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Producer" asp-action="Create" class="btn btnNuevo">Crear Nuevo Productor</a>
        </div>
    </div>
    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay Productores !</h2>
        }
        @foreach (Application.ViewModels.ProducerViewModel item in Model)
        {
            <!-- Repite este bloque para cada serie -->
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Producer" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                <a asp-controller="Producer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Fin del bloque -->
        }
    </div>
</div>
